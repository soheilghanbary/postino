generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @unique
  name      String
  username  String   @default(cuid())
  email     String
  image     String
  bio       String   @default("")
  website   String   @default("")
  createdAt DateTime @default(now())

  @@index([name])
}
